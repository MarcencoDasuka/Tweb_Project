@using CarShop.Models.my
@model Bicycle

@{
    ViewBag.Title = "Подробнее о товаре";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="row g-0">
            <div class="col-md-5">
                <!-- Фотография товара -->
                <img src="@Model.img" alt="@Model.name" class="img-fluid rounded-start" style="object-fit: cover; height: 100%; max-height: 400px;">
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <!-- Название и описание -->
                    <h2 class="card-title">@Model.name</h2>
                    <p class="card-text text-muted mb-3">@Model.shortDesc</p>
                    <p class="card-text" style="font-size: 1.1rem;">@Model.longDesc</p>

                    <!-- Информация о цене -->
                    <h4 class="text-primary">Цена: @Model.price ₽</h4>

                    <!-- Доступность -->
                    <p class="mb-3"><strong>Доступность:</strong>  @(Model.available ? "В наличии" : "Нет в наличии")</p>

                    <!-- Кнопки -->
                    <div class="d-flex gap-3">
                        <a href="/Cart/Add/@Model.id" class="btn btn-success btn-lg">Добавить в корзину</a>
                        <a href="/" class="btn btn-outline-secondary btn-lg">Вернуться на главную</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
