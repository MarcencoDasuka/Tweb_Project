@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Товары</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container body-content">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Товары</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

            @*хэдэр*@
            <main>
                <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
                    <div class="col">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-header py-3">
                                <h4 class="my-0 fw-normal">Для детей</h4>
                            </div>
                            <div class="card-body">
                                <h1 class="card-title pricing-card-title">$150</h1>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>для детей до 14 лет</li>
                                </ul>
                                <button type="button" class="w-100 btn btn-lg btn-outline-primary">Заказать</button>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-header py-3">
                                <h4 class="my-0 fw-normal">Спортивные</h4>
                            </div>
                            <div class="card-body">
                                <h1 class="card-title pricing-card-title">$300</h1>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>Для опытных водителей</li>
                                </ul>
                                <button type="button" class="w-100 btn btn-lg btn-primary">Заказать</button>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card mb-4 rounded-3 shadow-sm border-primary">
                            <div class="card-header py-3 text-bg-primary border-primary">
                                <h4 class="my-0 fw-normal">Горные</h4>
                            </div>
                            <div class="card-body">
                                <h1 class="card-title pricing-card-title">$450</h1>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>Для любиттей экстрима</li>
                                </ul>
                                <button type="button" class="w-100 btn btn-lg btn-primary">Заказать</button>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <hr />

        @*футер*@


