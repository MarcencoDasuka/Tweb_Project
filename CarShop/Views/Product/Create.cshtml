@model Shop.Domain.Entities.Bike

@{
    ViewBag.Title = "Создать товар";
}

<h2 class="text-center">Создание нового товара</h2>

<div class="container mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShortDescription)
            @Html.TextBoxFor(model => model.ShortDescription, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price)
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageUrl)
            @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success mt-3">Создать товар</button>
    }
</div>
