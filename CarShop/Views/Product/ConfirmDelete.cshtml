@model Shop.Domain.Entities.Bike

@{
    ViewBag.Title = "Подтверждение удаления товара";
}

<h2 class="text-center">Вы уверены, что хотите удалить товар?</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
        </div>
        <div class="col-md-6">
            <h3>@Model.Name</h3>
            <p>@Model.Description</p>
            <p><strong>Цена: </strong>@Model.Price ₽</p>

            <form action="@Url.Action("DeleteConfirmed", "Product", new { id = Model.Id })" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Удалить</button>
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary ml-3">Отмена</a>
            </form>
        </div>
    </div>
</div>
